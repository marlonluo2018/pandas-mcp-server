# Pandas MCP Server Configuration Example
# Copy this file to .env and customize the values as needed

# Directory Configuration
# Where to save generated chart files (default: ./core/charts)
PANDAS_MCP_CHARTS_DIR=./core/charts

# File Size Limits
# Maximum file size in bytes (default: 104857600 = 100MB)
PANDAS_MCP_MAX_FILE_SIZE=104857600

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
PANDAS_MCP_LOG_LEVEL=INFO

# Log file path (default: ./logs/mcp_server.log)
PANDAS_MCP_LOG_FILE=./logs/mcp_server.log

# Maximum log file size in bytes before rotation (default: 5242880 = 5MB)
PANDAS_MCP_LOG_MAX_BYTES=5242880

# Number of backup log files to keep (default: 3)
PANDAS_MCP_LOG_BACKUP_COUNT=3

# Performance Settings
# Enable memory monitoring (default: true)
PANDAS_MCP_ENABLE_MEMORY_MONITORING=true

# Memory warning threshold in MB (default: 500)
PANDAS_MCP_MEMORY_WARNING_THRESHOLD=500

# Feature Flags
# Enable chart generation feature (default: true)
PANDAS_MCP_ENABLE_CHART_GENERATION=true

# Enable code execution feature (default: true)
PANDAS_MCP_ENABLE_CODE_EXECUTION=true

# Security Configuration
# Additional blacklist items (comma-separated)
# These are added to the default blacklist
PANDAS_MCP_BLACKLIST=additional_item1,additional_item2
